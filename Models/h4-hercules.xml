  <!-- Gouverne de profondeur -->
 <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 25 </factor>
    <center> 
      <x-m> 39.210 </x-m>
