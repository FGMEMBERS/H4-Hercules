<?xml version="1.0"?>

<PropertyList>

  <particlesystem>
    <name>Tail</name>

    <texture>wake.png</texture>

    <emissive>false</emissive>
    <lighting>true</lighting>
        
    <attach>world</attach>
        
    <placer>
      <type>point</type>
    </placer>
        
