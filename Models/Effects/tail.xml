    <shooter>
      <theta-min-deg>0</theta-min-deg>
      <theta-max-deg>0</theta-max-deg>
      <phi-min-deg>0</phi-min-deg>
      <phi-max-deg>0</phi-max-deg>
      <speed>
        <value>10</value>
        <spread>2.5</spread>
      </speed>
      <rotspeed>
        <minx>0</minx>
        <miny>0</miny>
        <minz>0</minz>
        <maxx>0</maxx>
        <maxy>0</maxy>
        <maxz>0</maxz>
      </rotspeed>
    </shooter>

    <counter>
      <pps>
        <value>200</value>
        <spread>2</spread>
      </pps>         
      <condition>
        <and>
          <greater-than>
            <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
            <value>5</value>
          </greater-than>
          <or>
            <property>/gear/gear[0]/wow</property>
            <property>/gear/gear[1]/wow</property>
            <property>/gear/gear[2]/wow</property>
          </or>
        </and>
      </condition>            
    </counter>
        
    <align>billboard</align>
        
    <particle>
      <startcolor>
        <red>
          <value>0.9</value>
        </red>
        <green>
          <value>0.9</value>
        </green>
        <blue>
          <value>1.0</value>
        </blue>
        <alpha>
          <value>0.5</value>
        </alpha>
      </startcolor>

      <endcolor>
        <red>
          <value>1.0</value>
        </red>
        <green>
          <value>1.0</value>
        </green>
        <blue>
          <value>1.0</value>
        </blue>
        <alpha>
          <value>1.0</value>
        </alpha>
      </endcolor>

      <startsize>
        <value>0.5</value>
      </startsize>

      <endsize>
        <value>8</value>
      </endsize>

      <life-sec>
        <value>10.0</value>
      </life-sec>

      <mass-kg>0.15</mass-kg>
      <radius-m>0.3</radius-m>
    </particle>
        
    <program>
      <fluid>water</fluid>
      <gravity>enabled</gravity>
      <wind>disabled</wind>
    </program>
        
  </particlesystem>

</PropertyList>

