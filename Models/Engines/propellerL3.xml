<?xml version="1.0"?>

<PropertyList>

  <path>propellerL.ac</path>

  <animation>
    <object-name>helice</object-name>
    <object-name>bol</object-name>

    <!-- transparent objects -->
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Sélection/désélection en fonction des rpm moteurs -->
  <!-- On sélectionne l'un des disques en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[2]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[2]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[2]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <!-- On sélectionne l'hélice si rpm inférieur à  1000 -->
  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[2]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <!-- Rotation de l'hélice -->
  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[2]/rpm</property>
    <factor> 1 </factor>
    <center>
     <x-m> 0.000 </x-m>
     <y-m> 0.000 </y-m>
     <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

</PropertyList>

