      <x-m> -4.753 </x-m>
      <y-m> -2.111 </y-m>
      <z-m> -0.548 </z-m>
    </offsets>
  </model>

  <!-- Les volants -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Yokes/yokes.xml</path>
    <offsets>
      <x-m> -6.306 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.253 </z-m>
    </offsets>
  </model>

</PropertyList>
