<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Hughes H4 Hercules - 1946 -->
<PropertyList>

  <path>interior.ac</path>

  <animation>
    <object-name>planchet</object-name>
    <object-name>tourvitres</object-name>
    <object-name>plafond</object-name>

    <!-- transparent objects -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
  </effect>

  <!-- Panel du pilote -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel1/panel.xml</path>
    <offsets>
      <x-m> -6.713 </x-m>
      <y-m> -0.420 </y-m>
      <z-m>  0.389 </z-m>
    </offsets>
  </model>

  <!-- Panel des manettes pilote & copilote -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel2/panel.xml</path>
    <offsets>
      <x-m> -6.516 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.303 </z-m>
    </offsets>
  </model>

  <!-- Panel central principal -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel3/panel.xml</path>
    <offsets>
      <x-m> -6.097 </x-m>
      <y-m>  0.003 </y-m>
      <z-m>  0.336 </z-m>
    </offsets>
  </model>

  <!-- Panel co pilote -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel4/panel.xml</path>
    <offsets>
      <x-m> -6.715 </x-m>
      <y-m>  0.492 </y-m>
      <z-m>  0.385 </z-m>
    </offsets>
  </model>

  <!-- Panel des manettes ingénieur moteur -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel5/panel.xml</path>
    <offsets>
      <x-m> -4.305 </x-m>
      <y-m>  1.637 </y-m>
      <z-m> -0.546 </z-m>
    </offsets>
  </model>

  <!-- Panel des moteurs -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel6/panel.xml</path>
    <offsets>
      <x-m> -4.453 </x-m>
      <y-m>  1.703 </y-m>
      <z-m> -0.128 </z-m>
      <roll-deg>    8.200 </roll-deg>
    </offsets>
  </model>

  <!-- Second panel des moteurs -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel7/panel.xml</path>
    <offsets>
      <x-m> -3.917 </x-m>
      <y-m>  1.626 </y-m>
      <z-m> -0.314 </z-m>
      <heading-deg> 41.420 </heading-deg>
    </offsets>
  </model>

  <!-- Troisième panel des moteurs -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Panel8/panel.xml</path>
    <offsets>
      <x-m> -3.797 </x-m>
      <y-m>  1.327 </y-m>
      <z-m> -0.378 </z-m>
    </offsets>
  </model>

  <!-- Le bar de Xiii -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Bar/bar.xml</path>
    <offsets>
      <x-m> -3.506 </x-m>
      <y-m> -2.297 </y-m>
      <z-m> -0.808 </z-m>
      <heading-deg> -150 </heading-deg>
    </offsets>
  </model>

  <!-- Le siège du pilote -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Other/seat.xml</path>
    <offsets>
      <x-m> -5.968 </x-m>
      <y-m> -0.567 </y-m>
      <z-m>  0.267 </z-m>
    </offsets>
  </model>

  <!-- Le pilote -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Pilot/liner_pilot.xml</path>
    <offsets>
      <x-m> -6.114 </x-m>
      <y-m> -0.574 </y-m>
      <z-m>  0.240 </z-m>
    </offsets>
  </model>

  <!-- Le siège du copilote -->
  <model>
    <path>Aircraft/H4-Hercules/Models/Interior/Other/seat.xml</path>
    <offsets>
      <x-m> -5.968 </x-m>
      <y-m>  0.567 </y-m>
      <z-m>  0.267 </z-m>
    </offsets>
  </model>

  <!-- Le siège de l'ingénieur moteur -->
