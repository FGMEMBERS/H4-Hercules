<?xml version="1.0"?>

<!-- Hughes H4 Hercules - 1946 -->

<PropertyList>

  <path>yokes.ac</path>

  <animation>
    <object-name>axe-volant-pilote</object-name>
    <object-name>axe-volant-copilote</object-name>
    <object-name>volant-pilote</object-name>    
    <object-name>volant-copilote</object-name>    

    <!-- transparent objects -->
  </animation>

  <!-- Les volants (pilote et copilote) -->  
  <animation>
    <type>rotate</type>
    <object-name>axe-volant-pilote</object-name>
    <object-name>volant-pilote</object-name>    
    <property>controls/flight/elevator</property>
    <factor> -13 </factor>
    <offset-deg> -15.000 </offset-deg>
    <center>
      <x-m>  0.000 </x-m>
      <y-m> -0.825 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x> 0.0 </x>
      <y> 1.0 </y>
      <z> 0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>volant-pilote</object-name>
    <property>controls/flight/aileron</property>
    <factor> -90.000 </factor>
    <offset-deg> 0.000 </offset-deg>
    <center>
      <x-m>  0.025 </x-m>
      <y-m> -0.573 </y-m>
      <z-m>  0.734 </z-m>
    </center>
    <axis>
      <x> 1.0 </x>
      <y> 0.0 </y>
      <z> 0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axe-volant-copilote</object-name>
    <object-name>volant-copilote</object-name>    
    <property>controls/flight/elevator</property>
    <factor> -13 </factor>
    <offset-deg> -15.000 </offset-deg>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.825 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x> 0.0 </x>
      <y> 1.0 </y>
      <z> 0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>volant-copilote</object-name>
    <property>controls/flight/aileron</property>
    <factor> -90.000 </factor>
    <offset-deg> 0.000 </offset-deg>
    <center>
      <x-m>  0.025 </x-m>
      <y-m>  0.573 </y-m>
      <z-m>  0.734 </z-m>
    </center>
    <axis>
      <x> 1.0 </x>
      <y> 0.0 </y>
      <z> 0.0 </z>
    </axis>
  </animation>

</PropertyList>
