<PropertyList>

  <sim include="Nasal/H4-Hercules-Views.xml">

    <startup>
      <splash-texture>Aircraft/H4-Hercules/h4-hercules-splash.rgb</splash-texture>
    </startup>

    <type type="string">seaplane</type>

    <systems>
      <electrical>
        <path>Aircraft/Generic/generic-electrical.xml</path>
      </electrical>
    </systems> 

    <sound>
      <audible>true</audible>
      <path>Aircraft/H4-Hercules/Sounds/h4-hercules-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/H4-Hercules/Models/h4-hercules.xml</path>
    </model> 

    <submodels>
      <serviceable>true</serviceable>
      <path>Aircraft/H4-Hercules/Models/Submodels/Wakes/Wakes.xml</path>
    </submodels>

    <multiplay>
      <chat_display>1</chat_display>
    </multiplay> 

    <help>
      <title>Hughes H4 Hercules</title>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passanger door</desc>
      </key>
    </help>

  </sim>

  <nasal>
    <doors>
      <file>Aircraft/H4-Hercules/Nasal/doors.nas</file>
    </doors>
  </nasal>

  <input>
    <keyboard include="Nasal/H4-Hercules-keyboard.xml">
    </keyboard>
  </input>


  <!-- ============= -->
  <!-- customisation -->
  <!-- ============= -->

  <controls>
    <engines>
      <engine n="0">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="1">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="2">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="3">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="4">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="5">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="6">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="7">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <rpm>10</rpm>
