<PropertyList>

 <sim include="Nasal/H4-Hercules-Views.xml">

  <startup>
   <splash-texture>Aircraft/H4-Hercules/h4-hercules-splash.rgb</splash-texture>
  </startup>

  <presets>
   <tanks include="Nasal/H4-Hercules-fuel.xml"/>
   <mooring include="Nasal/H4-Hercules-route.xml"/>
  </presets>

  <systems>
   <electrical>
    <path>Aircraft/Generic/generic-electrical.xml</path>
   </electrical>
  </systems> 

  <sound>
   <audible>true</audible>
    <path>Aircraft/H4-Hercules/Sounds/h4-hercules-sound.xml</path>
  </sound>

  <model>
   <path>Aircraft/H4-Hercules/Models/h4-hercules.xml</path>
  </model> 

  <submodels>
    <serviceable>true</serviceable>
    <path>Aircraft/H4-Hercules/Models/Submodels/Wakes/Wakes.xml</path>
  </submodels>

  <view>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  -0.528 </x-offset-m>
      <y-offset-m archive="y">   4.337 </y-offset-m>
      <z-offset-m archive="y"> -13.889 </z-offset-m>
    </config>
  </view>

  <chase-distance-m type="double" archive="y">-100.00</chase-distance-m>
  
 </sim>

 <nasal>
  <H4-Hercules>
   <file>Aircraft/H4-Hercules/Nasal/H4-Hercules.nas</file>
  </H4-Hercules>
  <Doors>
   <file>Aircraft/H4-Hercules/Nasal/H4-Hercules-Doors.nas</file>
  </Doors>
 </nasal>

 <input>
  <keyboard include="Nasal/H4-Hercules-keyboard.xml">
  </keyboard>
 </input>


