<PropertyList>

  <sim include="Nasal/views.xml">

    <fuel-fraction>0.3</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/H4-Hercules/h4-hercules-splash.png</splash-texture>
    </startup>

    <type type="string">seaplane</type>

    <systems>
      <electrical>
        <path>Aircraft/Generic/generic-electrical.xml</path>
      </electrical>
    </systems> 

    <sound>
      <audible>true</audible>
      <path>Aircraft/H4-Hercules/Sounds/h4-hercules-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/H4-Hercules/Models/h4-hercules.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model> 

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay> 

    <help>
      <title>Hughes H4 Hercules</title>
      <key>
        <name>d</name>
        <desc>Open/Close left door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close right door</desc>
      </key>
    </help>

    <menubar include="Dialogs/h4-hercules-menu.xml"/>

  </sim>

  <input>
    <keyboard include="Nasal/H4-Hercules-keyboard.xml">
    </keyboard>
  </input>


  <!-- ============= -->
  <!-- customisation -->
  <!-- ============= -->

  <controls>
    <engines>
      <engine n="0">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="1">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="2">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="3">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="4">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="5">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="6">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
      <engine n="7">
        <magnetos>3</magnetos>
        <propeller-pitch>1.0</propeller-pitch>
        <running>1</running>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <rpm>10</rpm>
    </engine>
    <engine n="1">
      <rpm>10</rpm>
    </engine>
    <engine n="2">
      <rpm>10</rpm>
    </engine>
    <engine n="3">
      <rpm>10</rpm>
    </engine>
    <engine n="4">
      <rpm>10</rpm>
    </engine>
    <engine n="5">
      <rpm>10</rpm>
    </engine>
    <engine n="6">
      <rpm>10</rpm>
    </engine>
    <engine n="7">
      <rpm>10</rpm>
    </engine>
  </engines>

  <nasal>
    <doors>
      <file>Aircraft/H4-Hercules/Nasal/doors.nas</file>
    </doors>
    <h4>
      <file>Aircraft/H4-Hercules/Nasal/liveries.nas</file>
      <file>Aircraft/H4-Hercules/Nasal/light.nas</file>
    </h4>
  </nasal>

</PropertyList>
